{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "strictNullChecks": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
  },
  "exclude": [
    "./node_modules/**",
    "./.astro/**",
    "./.nx/**",
    "./.vscode/**",
    "./dist/**",
    "./build/**",
    "./.svelte/**",
    "./coverage/**",
    "**/_/**"
  ]
}
